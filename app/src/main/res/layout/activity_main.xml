<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_background_first_activs"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:inputType="textPersonName"
        android:text="Имя"
        android:textColor="#26B5B5B5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_famely"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:inputType="textPersonName"
        android:text="Фамилия"
        android:textColor="#26B5B5B5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_name"
        app:layout_constraintStart_toStartOf="@+id/input_name"
        app:layout_constraintTop_toBottomOf="@+id/input_name" />

    <EditText
        android:id="@+id/input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:inputType="textPersonName"
        android:text="Пароль"
        android:textColor="#26B5B5B5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_famely"
        app:layout_constraintStart_toStartOf="@+id/input_famely"
        app:layout_constraintTop_toBottomOf="@+id/input_famely" />

    <EditText
        android:id="@+id/input_check_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:inputType="textPersonName"
        android:text="Подтвердите пароль"
        android:textColor="#26B5B5B5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/input_password"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/input_password"
        app:layout_constraintTop_toBottomOf="@+id/input_password" />

    <DatePicker
        android:id="@+id/datePicker"
        style="@android:style/Widget.DatePicker"
        android:layout_width="239dp"
        android:layout_height="167dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:background="#1A202C"
        android:headerBackground="@drawable/ic_registration"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/backgroundreg"
        app:layout_constraintEnd_toEndOf="@+id/input_check_password"
        app:layout_constraintStart_toStartOf="@+id/input_check_password"
        app:layout_constraintTop_toBottomOf="@+id/input_check_password" />

    <ImageView
        android:id="@+id/backgroundreg"
        android:layout_width="207dp"
        android:layout_height="87dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_registrations"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/buttonreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="REGISTRATION"
        android:textColor="#B2FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundreg"
        app:layout_constraintEnd_toEndOf="@+id/backgroundreg"
        app:layout_constraintStart_toStartOf="@+id/backgroundreg"
        app:layout_constraintTop_toTopOf="@+id/backgroundreg" />

    <TextView
        android:id="@+id/birthbay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="65dp"
        android:fontFamily="sans-serif-medium"
        android:orientation="horizontal"
        android:text="Дата рождения"
        android:textColor="#39B5B5B5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/datePicker"
        app:layout_constraintEnd_toEndOf="@+id/input_check_password"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="@+id/input_check_password"
        app:layout_constraintTop_toBottomOf="@+id/input_check_password"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>